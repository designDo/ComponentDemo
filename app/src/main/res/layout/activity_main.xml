<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

  <Button
      android:id="@+id/login"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="跳转到-登录-组件(测试数据传递)"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/user_info"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="获取-登录-组件Fragment"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/go_search"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="跳转到-搜索-组件(测试Uri跳转)"
      android:textStyle="bold"
      />

  <Button
      android:id="@+id/go_search_result"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="跳转到-搜索-组件(测试result)"
      android:textStyle="bold"
      />
  <TextView
      android:id="@+id/show_ui"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:text="显示登录组件的UserFragment"
      android:textStyle="bold"
      />

  <FrameLayout
      android:id="@+id/container"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />

</LinearLayout>